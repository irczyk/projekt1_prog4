<Window x:Class="projekt.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Śledzenie Zużycia Wody i Energii" Height="400" Width="500">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Text="Zużycie wody (m³):"/>
            <TextBox Name="WaterInput"/>

            <TextBlock Text="Zużycie energii (kWh):"/>
            <TextBox Name="EnergyInput"/>

            <Button Content="Dodaj pomiar" Click="AddMeasurement_Click"/>

            <ListBox Name="MeasurementList"/>
            <Button Content="Usuń zaznaczony pomiar" Click="RemoveSelectedMeasurement_Click" Background="Red" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>
